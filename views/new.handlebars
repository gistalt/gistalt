<form method="post" action="/create" class='js-do-save'>
<div class='bottom2 of-auto'>
  <input type="hidden" class='js-id' value="">
  <input type="hidden" class='js-delete' value="">
  <input class='col6 description js-description' type="text" value="{{description}}" name="description" placeholder="What are you writing about?">
  <div class='col6'>
  <small class='fr'>by {{owner.login}}</small>
  </div>
</div>
<div class="bottom2 of-auto">
  <input class='filename col12 js-filename' type="text" name="filename" value="{{time}}.md"><br>
</div>
  <textarea autofocus class='js-content' id="content" name="content">{{content}}</textarea>
  <br>
  <button class='js-hide' type="submit">Create Gist</button>
  <div class='col2 margin0 pin-topleft top3'>
  </div>

{{#if session.accessToken}}
  <nav class='pin-bottom margin-auto col7'>
    <div class='pill bottom1 fl'>
       <a class='btn' href='/'>Your gists</a><!--
        --><a class='btn' href='/new'>New gist</a><!--
        --><a class='btn' href='https://github.com/hivemindworks/gistalt/issues/new'>Submit feedback</a>
    </div>
    <div class='pill bottom1 fr checkbox-pill'>
        <a class='btn' href='/logout'>Logout</a><!--
	--><input id='is-public' class='hide checkbox-public' type='checkbox' name="isPublic" checked="true"><!--
        --><label for='is-public' class='btn icon check'>Public</label><!--
       --><a href='#' type='submit' data-saved="true" data-submit=".js-do-save" class='btn btn-main js-save js-create js-show-progress js-skip-alert'>Create File</a>
    </div>
  </nav>
  {{/if}}
</form>
