{{#if gists}}
  <br><br><a href='/new'>Create New Gist</a>
  <h2>Your Gists:</h2>
{{/if}}
<ul class='gists'>
{{#each gists}}
  <li>
    {{#if this.description}}
      <a href='/{{ this.id }}' class='gist-title'>{{ this.description }}</a><br>
    {{/if}}
      {{#each this.files}}
        <a href="{{../this.id}}/{{@key}}">{{@key}}</a>	
      {{/each}}
      <small>on {{ this.time }}</small>
  </li>
{{/each}}
</ul>
{{#if prev}}
  <a href='/?p={{prev}}'>&laquo; prev</a>
{{/if}}
{{#if next}}
  <a href='/?p={{next}}'>next &raquo;</a>
{{/if}}
